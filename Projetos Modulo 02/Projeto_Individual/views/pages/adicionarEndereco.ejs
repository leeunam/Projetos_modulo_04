<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../style.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&family=Plus+Jakarta+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Simples - Adicionar Endere√ßo</title>
  </head>
  <body style="padding: 0; align-items: flex-start; background: #f9fafb">
    <div class="page-container">
      <div id="header-placeholder"></div>

      <main class="main-content">
        <div class="main-layout">
          <div class="form-sections">
            <section class="form-section create-form-left">
              <div class="page-header">
                <h1 class="form-title">Adicionar Endere√ßo</h1>
                <p class="form-subtitle">
                  Preencha os dados do local do evento
                </p>
              </div>

              <% if (typeof error !== 'undefined' && error) { %>
              <div
                class="error-message"
                style="
                  background-color: #fee;
                  color: #c33;
                  padding: 10px;
                  border-radius: 5px;
                  margin-bottom: 15px;
                "
              >
                <%= error %>
              </div>
              <% } %> <% if (typeof success !== 'undefined' && success) { %>
              <div
                class="success-message"
                style="
                  background-color: #efe;
                  color: #363;
                  padding: 10px;
                  border-radius: 5px;
                  margin-bottom: 15px;
                "
              >
                <%= success %>
              </div>
              <% } %>

              <form
                class="form-container"
                id="addAddressForm"
                method="POST"
                action="/api/address"
              >
                <div class="input-group">
                  <label for="street" class="input-label create-label"
                    >Rua *</label
                  >
                  <div class="input-box">
                    <input
                      id="street"
                      name="street"
                      type="text"
                      placeholder="Ex: Rua Augusta"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="number" class="input-label create-label"
                    >N√∫mero *</label
                  >
                  <div class="input-box">
                    <input
                      id="number"
                      name="number"
                      type="number"
                      placeholder="Ex: 123"
                      class="create-input"
                      required
                      min="1"
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="district" class="input-label create-label"
                    >Bairro *</label
                  >
                  <div class="input-box">
                    <input
                      id="district"
                      name="district"
                      type="text"
                      placeholder="Ex: Consola√ß√£o"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="cep" class="input-label create-label"
                    >CEP *</label
                  >
                  <div class="input-box">
                    <input
                      id="cep"
                      name="cep"
                      type="text"
                      placeholder="Ex: 01305-100"
                      class="create-input"
                      required
                      maxlength="9"
                    />
                  </div>
                </div>

                <div
                  class="form-actions"
                  style="display: flex; gap: 15px; margin-top: 20px"
                >
                  <button type="submit" class="create-event-btn" id="submitBtn">
                    Confirmar Endere√ßo
                  </button>
                  <a
                    href="/criarEvento"
                    class="create-event-btn"
                    style="
                      background: #6b7280;
                      text-decoration: none;
                      text-align: center;
                      line-height: 40px;
                    "
                  >
                    Voltar
                  </a>
                </div>
              </form>
            </section>

            <section class="form-section create-form-right">
              <div class="image-upload-container">
                <div class="upload-content">
                  <div class="upload-icon">üìç</div>
                  <span class="upload-text">Localiza√ß√£o do Evento</span>
                  <p class="upload-subtitle">
                    Adicione o endere√ßo onde o evento acontecer√°
                  </p>
                </div>
              </div>
            </section>
          </div>
        </div>
      </main>
    </div>

    <script src="../scripts.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        setupFormValidation();
      });

      function setupFormValidation() {
        const form = document.getElementById('addAddressForm');

        if (!form) {
          console.error('Formul√°rio n√£o encontrado!');
          return;
        }

        form.addEventListener('submit', function (event) {
          const submitBtn = document.getElementById('submitBtn');
          submitBtn.disabled = true;
          submitBtn.textContent = 'Salvando endere√ßo...';
        });
      }
    </script>
  </body>
</html>
